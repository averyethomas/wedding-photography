doctype html
html
    include includes/header.pug
    
    body(ng-app="angularApp" ng-controller="mainCtrl")
        div.container
            h1 Heading 1
            h2 Heading 2
            h3 Heading 3
            h4 Heading 4
            h5 Heading 5
            h6 Heading 6
            p Paragraph
            a(href="#") Link
        div.wide-block
            div.container
                h4 This is a quote or something
